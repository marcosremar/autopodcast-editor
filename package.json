{
  "name": "aeropod",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next && next dev",
    "dev:debug": "NODE_OPTIONS='--max-old-space-size=4096' next dev",
    "dev:fresh": "pkill -f 'next-server' 2>/dev/null; rm -rf .next node_modules/.cache && next dev",
    "dev:restart": "pkill -f 'next-server' 2>/dev/null; sleep 1; next dev",
    "dev:monitor": "./scripts/dev-monitor.sh",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:debug": "next build --experimental-debug-memory-usage",
    "start": "next start",
    "lint": "eslint",
    "clean": "rm -rf .next node_modules/.cache",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
